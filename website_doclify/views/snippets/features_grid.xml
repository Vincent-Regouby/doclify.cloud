        </template>

        <!-- Register snippet in the Website Builder -->
        <record id="snippet_features_grid_register" model="ir.ui.view">
            <field name="key">website_doclify.snippet_features_grid</field>
            <field name="name">Doclify Features Grid</field>
            <field name="type">qweb</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="website.snippets"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='snippet_feature']" position="inside">
                    <t t-snippet="website_doclify.snippet_features_grid"
                       t-thumbnail="/website_doclify/static/src/img/snippet_features.png"/>
                </xpath>
            </field>
        </record>
    </data>
