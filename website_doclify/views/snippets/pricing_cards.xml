<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Pricing Cards Snippet -->
        <template id="snippet_pricing_cards" name="Pricing Cards">
            <section class="doclify-pricing s_doclify_pricing" style="padding: 6rem 0; background: #F9FAFB;">
                <div class="doclify-container container">
                    <div style="text-align: center; margin-bottom: 3rem;">
                        <h2 class="o_default_snippet_text" style="font-size: 2.5rem; margin-bottom: 1rem; color: #1F2937;">Nos tarifs</h2>
                        <p class="o_default_snippet_text" style="font-size: 1.125rem; color: #6B7280;">Choisissez l'offre qui vous convient</p>
                    </div>

                    <div class="pricing-cards" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem; max-width: 1000px; margin: 0 auto;">
                        <!-- Pricing Card 1 -->
                        <div class="pricing-card" style="background: white; padding: 3rem 2rem; border-radius: 0.75rem; box-shadow: 0 10px 15px rgba(0,0,0,0.1); text-align: center; position: relative;">
                            <h3 class="o_default_snippet_text" style="font-size: 1.5rem; margin-bottom: 1rem; color: #1F2937;">Starter</h3>
                            <div class="price" style="font-size: 3rem; font-weight: 700; color: #2563EB; margin: 1rem 0;">
                                <span class="currency" style="font-size: 1.5rem;">29€</span>
                                <span class="period" style="font-size: 1rem; color: #6B7280; font-weight: 400;">/mois</span>
                            </div>
                            <ul class="features-list" style="list-style: none; padding: 0; margin: 2rem 0; text-align: left;">
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Fonctionnalité 1</span>
                                </li>
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Fonctionnalité 2</span>
                                </li>
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Fonctionnalité 3</span>
                                </li>
                            </ul>
                            <a href="#" class="doclify-btn btn-outline" style="display: block; width: 100%; background: transparent; border: 2px solid #2563EB; color: #2563EB; padding: 0.75rem 1.5rem; font-size: 1rem; font-weight: 600; text-align: center; border-radius: 0.5rem; text-decoration: none;">
                                Commencer
                            </a>
                        </div>

                        <!-- Pricing Card 2 (Featured) -->
                        <div class="pricing-card featured" style="background: white; padding: 3rem 2rem; border-radius: 0.75rem; box-shadow: 0 10px 15px rgba(0,0,0,0.1); text-align: center; position: relative; border: 3px solid #2563EB; transform: scale(1.05);">
                            <div style="position: absolute; top: -15px; left: 50%; transform: translateX(-50%); background: #2563EB; color: white; padding: 0.5rem 1.5rem; border-radius: 1rem; font-weight: 600; font-size: 0.875rem;">
                                Recommandé
                            </div>
                            <h3 class="o_default_snippet_text" style="font-size: 1.5rem; margin-bottom: 1rem; color: #1F2937;">Pro</h3>
                            <div class="price" style="font-size: 3rem; font-weight: 700; color: #2563EB; margin: 1rem 0;">
                                <span class="currency" style="font-size: 1.5rem;">49€</span>
                                <span class="period" style="font-size: 1rem; color: #6B7280; font-weight: 400;">/mois</span>
                            </div>
                            <ul class="features-list" style="list-style: none; padding: 0; margin: 2rem 0; text-align: left;">
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Toutes les fonctionnalités Starter</span>
                                </li>
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Fonctionnalité 4</span>
                                </li>
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Fonctionnalité 5</span>
                                </li>
                            </ul>
                            <a href="#" class="doclify-btn btn-primary" style="display: block; width: 100%; background: linear-gradient(135deg, #2563EB 0%, #7C3AED 100%); color: white; padding: 0.75rem 1.5rem; font-size: 1rem; font-weight: 600; text-align: center; border-radius: 0.5rem; text-decoration: none; border: none;">
                                Commencer
                            </a>
                        </div>

                        <!-- Pricing Card 3 -->
                        <div class="pricing-card" style="background: white; padding: 3rem 2rem; border-radius: 0.75rem; box-shadow: 0 10px 15px rgba(0,0,0,0.1); text-align: center; position: relative;">
                            <h3 class="o_default_snippet_text" style="font-size: 1.5rem; margin-bottom: 1rem; color: #1F2937;">Enterprise</h3>
                            <div class="price" style="font-size: 3rem; font-weight: 700; color: #2563EB; margin: 1rem 0;">
                                <span class="o_default_snippet_text" style="font-size: 1.5rem;">Sur mesure</span>
                            </div>
                            <ul class="features-list" style="list-style: none; padding: 0; margin: 2rem 0; text-align: left;">
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Toutes les fonctionnalités Pro</span>
                                </li>
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Support prioritaire</span>
                                </li>
                                <li class="o_default_snippet_text" style="padding: 0.75rem 0; border-bottom: 1px solid #E5E7EB; display: flex; align-items: center;">
                                    <span style="color: #10B981; font-weight: 700; margin-right: 0.75rem; font-size: 1.25rem;">✓</span>
                                    <span>Personnalisation</span>
                                </li>
                            </ul>
                            <a href="/contact" class="doclify-btn btn-outline" style="display: block; width: 100%; background: transparent; border: 2px solid #2563EB; color: #2563EB; padding: 0.75rem 1.5rem; font-size: 1rem; font-weight: 600; text-align: center; border-radius: 0.5rem; text-decoration: none;">
                                Nous contacter
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </template>

        <!-- Register snippet in the Website Builder -->
        <record id="snippet_pricing_cards_register" model="ir.ui.view">
            <field name="key">website_doclify.snippet_pricing_cards</field>
            <field name="name">Doclify Pricing Cards</field>
            <field name="type">qweb</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="website.snippets"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='snippet_feature']" position="inside">
                    <t t-snippet="website_doclify.snippet_pricing_cards"
                       t-thumbnail="/website_doclify/static/src/img/snippet_pricing.png"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
