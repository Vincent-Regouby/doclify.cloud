<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit website layout to add custom header and footer -->
        <template id="doclify_layout" name="Doclify Website Layout" inherit_id="website.layout">
            <!-- Add custom CSS and JS assets -->
            <xpath expr="//head" position="inside">
                <meta name="description" t-att-content="page_meta_description or 'Doclify - Transcription et résumé de consultations médicales par IA. Gagnez 2h par semaine. RGPD, données souveraines.'"/>
                <meta name="keywords" t-att-content="page_meta_keywords or 'transcription médicale, IA médicale, CRM médecin, psychologue'"/>
                <meta property="og:title" t-att-content="page_title or 'Doclify - Transcription médicale par IA'"/>
                <meta property="og:description" t-att-content="page_meta_description or 'Gagnez 2h par semaine avec Doclify'"/>
                <meta property="og:type" content="website"/>
                <meta property="og:site_name" content="Doclify"/>
                <meta name="twitter:card" content="summary_large_image"/>
            </xpath>

            <!-- Custom Header -->
            <xpath expr="//header" position="replace">
                <header class="doclify-header">
                    <div class="doclify-container" style="display: flex; align-items: center; width: 100%; height: 100%;">
                        <!-- Logo -->
                        <a href="/" class="doclify-logo">
                            <span style="font-weight: 700; font-size: 1.5rem; color: #2563EB;">Doclify</span>
                        </a>

                        <!-- Desktop Navigation -->
                        <nav class="doclify-nav d-none d-lg-flex" style="margin-left: auto; gap: 2rem; align-items: center;">
                            <a href="/fonctionnalites">Fonctionnalités</a>
                            <a href="/tarifs">Tarifs</a>
                            <a href="/a-propos">À propos</a>
                            <a href="/contact">Contact</a>
                            <a href="/web/login" class="doclify-btn btn-primary btn-sm">Espace Médecin</a>
                        </nav>

                        <!-- Mobile Menu Toggle -->
                        <button class="doclify-mobile-menu-toggle d-lg-none" style="margin-left: auto; background: none; border: none; font-size: 1.5rem; cursor: pointer;">
                            ☰
                        </button>
                    </div>

                    <!-- Mobile Menu -->
                    <div class="doclify-mobile-menu d-lg-none" style="display: none; background: white; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                        <nav style="padding: 1rem;">
                            <a href="/fonctionnalites" style="display: block; padding: 0.75rem; color: #4B5563;">Fonctionnalités</a>
                            <a href="/tarifs" style="display: block; padding: 0.75rem; color: #4B5563;">Tarifs</a>
                            <a href="/a-propos" style="display: block; padding: 0.75rem; color: #4B5563;">À propos</a>
                            <a href="/contact" style="display: block; padding: 0.75rem; color: #4B5563;">Contact</a>
                            <a href="/web/login" class="doclify-btn btn-primary" style="display: block; margin: 1rem 0.75rem;">Espace Médecin</a>
                        </nav>
                    </div>
                </header>
            </xpath>

            <!-- Custom Footer -->
            <xpath expr="//footer" position="replace">
                <footer class="doclify-footer">
                    <div class="doclify-container">
                        <div class="footer-content" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; margin-bottom: 2rem;">
                            <!-- Company Column -->
                            <div class="footer-column">
                                <h4 style="color: white; font-size: 1rem; margin-bottom: 1rem;">Doclify</h4>
                                <p style="color: #9CA3AF; font-size: 0.875rem; margin-bottom: 1rem;">
                                    Transcription médicale par IA pour professionnels de santé.
                                </p>
                                <p style="color: #9CA3AF; font-size: 0.875rem;">
                                    RGPD • Souveraineté des données • IA locale
                                </p>
                            </div>

                            <!-- Product Column -->
                            <div class="footer-column">
                                <h4 style="color: white; font-size: 1rem; margin-bottom: 1rem;">Produit</h4>
                                <ul style="list-style: none; padding: 0; margin: 0;">
                                    <li style="margin-bottom: 0.5rem;"><a href="/fonctionnalites" style="color: #9CA3AF;">Fonctionnalités</a></li>
                                    <li style="margin-bottom: 0.5rem;"><a href="/tarifs" style="color: #9CA3AF;">Tarifs</a></li>
                                    <li style="margin-bottom: 0.5rem;"><a href="/web/login" style="color: #9CA3AF;">Connexion</a></li>
                                </ul>
                            </div>

                            <!-- Company Info Column -->
                            <div class="footer-column">
                                <h4 style="color: white; font-size: 1rem; margin-bottom: 1rem;">Entreprise</h4>
                                <ul style="list-style: none; padding: 0; margin: 0;">
                                    <li style="margin-bottom: 0.5rem;"><a href="/a-propos" style="color: #9CA3AF;">À propos</a></li>
                                    <li style="margin-bottom: 0.5rem;"><a href="/contact" style="color: #9CA3AF;">Contact</a></li>
                                </ul>
                            </div>

                            <!-- Legal Column -->
                            <div class="footer-column">
                                <h4 style="color: white; font-size: 1rem; margin-bottom: 1rem;">Légal</h4>
                                <ul style="list-style: none; padding: 0; margin: 0;">
                                    <li style="margin-bottom: 0.5rem;"><a href="/confidentialite" style="color: #9CA3AF;">Confidentialité</a></li>
                                    <li style="margin-bottom: 0.5rem;"><a href="/conditions-generales" style="color: #9CA3AF;">CGV</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="footer-bottom" style="border-top: 1px solid #4B5563; padding-top: 2rem; text-align: center; font-size: 0.875rem; color: #9CA3AF;">
                            <p>© <t t-esc="datetime.datetime.now().year"/> Doclify. Tous droits réservés.</p>
                        </div>
                    </div>
                </footer>
            </xpath>
        </template>

        <!-- Base page template for all Doclify pages -->
        <template id="doclify_page_base" name="Doclify Page Base">
            <t t-call="website.layout">
                <div id="wrap" class="doclify-website">
                    <t t-raw="0"/>
                </div>
            </t>
        </template>

        <!-- Contact Form Thank You Page -->
        <template id="contact_thank_you" name="Contact Form Thank You">
            <t t-call="website_doclify.doclify_page_base">
                <section class="doclify-hero" style="padding: 6rem 0; text-align: center;">
                    <div class="doclify-container">
                        <h1 style="margin-bottom: 1.5rem;">Merci <t t-esc="name"/>!</h1>
                        <p style="font-size: 1.125rem; color: #6B7280; margin-bottom: 2rem; max-width: 600px; margin-left: auto; margin-right: auto;">
                            Nous avons bien reçu votre message et nous vous recontacterons dans les plus brefs délais.
                        </p>
                        <a href="/" class="doclify-btn btn-primary">Retour à l'accueil</a>
                    </div>
                </section>
            </t>
        </template>
    </data>
</odoo>
