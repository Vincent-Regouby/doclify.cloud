<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Security Groups -->
    <record id="group_module_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="group_module_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_module_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
    
    <!-- Record Rules -->
    <record id="model_name_company_rule" model="ir.rule">
        <field name="name">Model: multi-company</field>
        <field name="model_id" ref="model_your_model"/>
        <field name="domain_force">[
            '|',
                ('company_id', '=', False),
                ('company_id', 'in', company_ids),
        ]</field>
    </record>
    
    <record id="model_name_user_rule" model="ir.rule">
        <field name="name">Model: user own records</field>
        <field name="model_id" ref="model_your_model"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_module_user'))]"/>
    </record>
    
    <record id="model_name_manager_rule" model="ir.rule">
        <field name="name">Model: managers see all</field>
        <field name="model_id" ref="model_your_model"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_module_manager'))]"/>
    </record>

</odoo>
